class Solution {
public:
    int smallestDivisor(vector<int>& nums, int threshold) {
        int left=1;
        int right=INT_MIN;
        for(int i=0;i<nums.size();i++)
        {
            right=max(right,nums[i]);
        }
        while(left<=right)
        {
            int mid=left+(right-left)/2;
            int sum=0;
            for(auto i:nums)
            {
                sum+=ceil((double)i/mid);
            }
            if(sum<=threshold)
            {
                right=mid-1;
            }
            else
            {
                left=mid+1;
            }
        }
        return left;
    }
};
