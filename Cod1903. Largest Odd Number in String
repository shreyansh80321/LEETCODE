class Solution {
public:
    string largestOddNumber(string num) {
        stack<char> st;
        for(int i=0;i<num.size();i++)
        {
            st.push(num[i]);
        }
        string str;
        while(!st.empty())
        {
            if(st.top()%2!=0)
            {
                while(!st.empty())
                {
                    str+=st.top();
                    st.pop();
                }
            }
            else
            {
                st.pop();
            }
        }
        string ans="";
        for(int i=str.length()-1;i>=0;i--)
        {
            ans+=str[i];
        }
        return ans;
    }
};
