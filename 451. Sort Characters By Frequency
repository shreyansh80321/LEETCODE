class Solution {
public:
    string frequencySort(string s) {
        unordered_map<char,int> v1;
        string str="";
        for(char i:s)
        {
            v1[i]++;
        }
        vector<pair<char,int>> v2(v1.begin(),v1.end());
       sort(v2.begin(), v2.end(),
          [](auto &a, auto &b) { return a.second > b.second; });
        for(int i=0;i<v2.size();i++)
        {
            int num=v2[i].second;
            while(num!=0)
            {
                str+=v2[i].first;
                num--;
            }
        }
        return str;
    }
};
